<%= search_form_for(@q, url: main_app.search_path, method: :get, class:"form-inline my-2 my-lg-0 d-flex flex-row") do |f| %>
    <%= f.search_field :title,
     placeholder: "Search Meal or Cook", 
     class: "form-control mr-sm-2 mx-2", 
     width: "15em" %>
    <%= f.submit "Search", class:"btn btn-outline-dark my-2 my-sm-0" %>  
<% end %>  