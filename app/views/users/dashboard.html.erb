  <%# for cooks %>
<% if user_signed_in? && @user.is_cook? %>
    <%# pending reviews %>
    <h3>Pending Reviews - Cook <h3>
    <% @user.reviews.each do |review| %>
        <% if review.pending? %>
            <%= review.body %>
            Created <%= time_ago_in_words(review.created_at) %> ago 
            <%= button_to 'Approve', user_review_path(@user.id, review.id), method: :approve, data: {confirm: "Are you sure"} %>
            <%= button_to 'Deny', user_review_path(@user.id, review.id), method: :deny, data: {confirm: "Are you sure"}  %>
        <% end %>
    <% end %>
    <%# orders %>
    <p>Orders </p>
    <% @user.orders.each do |order| %>
        <% if (order.pending?) %>
            <%= order.body %>
            Created <%= time_ago_in_words(order.created_at) %> ago 
            <%= button_to 'Accept',  user_order_path(@user.id, order.id), method: :accept, data: {confirm: "Are you sure"}  %>

            <%= button_to 'Decline',  user_order_path(@user.id, order.id),method: :decline, data: {confirm: "Are you sure"} %>
        <% end %>
    <% end %>
    <p>My Meals </p>
    <%# all meals/edit - here or just on cook show page with edit visible to just the cook? %>
    <p>Meals </p>
    <% @user.recipes.each do |r| %>
                <%= r.description %>
                <%= r.ingredients %>
                Created <%= time_ago_in_words(r.created_at) %> ago 
                <% if can? :crud, r%>
                    <%= button_to "Edit", edit_recipe_path(@r.id), method: :get %>%
                <% end %>
             
    <% end %>
<% else %>
    <%# for non-cooks %>
    <% if user_signed_in?%>
        <h3>Pending Reviews <h3>
        <% @user.reviews.each do |review| %>
            <% if review.pending? %>
                <%= review.body %>
                Created <%= time_ago_in_words(review.created_at) %> ago 
                <% if can? :crud, review %>
                    <%= button_to "Edit", edit_review_path(@review), method: :get %>%
                <% end %>
            <% end %>
        <% end %>  
        <h3>Reviews <h3>

        <% @user.reviews.each do |review| %>
            <% if !review.pending? %>
                <%= review.body %>
                Created <%= time_ago_in_words(review.created_at) %> ago 
                <% if review.approved? %>
                    <p style = "color: green"> Review Approved <p>
                <% else %>
                    <p style = "color: red"> Review Denied <p>
                <% end %>
            <% end %>  
        <% end %>  

     <% end %> 

<% end %>
