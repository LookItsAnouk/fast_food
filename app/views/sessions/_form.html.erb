<section class="bg-image"
  style="background-image: url('https://images.pexels.com/photos/315755/pexels-photo-315755.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');" >
<div class="mask d-flex align-items-center h-100 gradient-custom-3 pb-0">
    <div class="container h-100 pb-0">
      <div class="container row d-flex justify-content-center align-items-center h-100 pb-0">
        <div class="container col-12 col-md-9 col-lg-7 col-xl-6 pb-0">
          <div class="card m-4" style="">
            <div class="card-body px-5 pt-5">
               
             <h2 class="text-uppercase text-center mb-5">Sign In</h2>

            <div class="form-outline mb-4">

            <%= form_with(model: user) do |form| %>

            <div class="form-outline mb-4">
              <%= form.label :email, class: "form-label" %>
              <%= form.text_field :email, class: "form-control form-control-lg" %>
            </div>

            <div class="form-outline mb-4">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, class: "form-control form-control-lg" %>
            </div>
            <%= form.submit 'Sign In', class:"btn btn-outline-dark btn-lg btn-block"%>
          <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>